{
  "name": "@html-validate/stylish",
  "version": "1.0.1",
  "description": "ESLint compatible stylish formatter",
  "keywords": [
    "stylish",
    "eslint"
  ],
  "homepage": "https://gitlab.com/html-validate/stylish",
  "bugs": {
    "url": "https://gitlab.com/html-validate/stylish/issues/new"
  },
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/html-validate/stylish.git"
  },
  "license": "MIT",
  "author": "David Sveningsson <ext@sidvind.com>",
  "main": "dist/index.js",
  "files": [
    "dist",
    "!**/*.spec.js",
    "!**/*.spec.d.ts"
  ],
  "scripts": {
    "build": "tsc --build",
    "eslint": "eslint .",
    "eslint:fix": "eslint --fix .",
    "prepare": "husky install && git config commit.template ./node_modules/@html-validate/commitlint-config/gitmessage",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier --write .",
    "semantic-release": "semantic-release",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@html-validate"
    ]
  },
  "lint-staged": {
    "*.{ts,js,json,md}": "prettier --write"
  },
  "prettier": "@html-validate/prettier-config",
  "jest": {
    "preset": "@html-validate/jest-config",
    "snapshotSerializers": [
      "pretty-format/build/plugins/ConvertAnsi"
    ]
  },
  "dependencies": {
    "kleur": "^4.0.0",
    "text-table": "^0.2.0"
  },
  "devDependencies": {
    "@commitlint/cli": "12.1.1",
    "@html-validate/commitlint-config": "1.3.1",
    "@html-validate/eslint-config": "4.1.0",
    "@html-validate/eslint-config-jest": "4.0.0",
    "@html-validate/eslint-config-typescript": "4.0.0",
    "@html-validate/jest-config": "1.2.9",
    "@html-validate/prettier-config": "1.1.0",
    "@html-validate/semantic-release-config": "1.2.6",
    "@types/jest": "26.0.23",
    "@types/node": "11.15.52",
    "@types/text-table": "0.2.1",
    "eslint": "7.25.0",
    "husky": "6.0.0",
    "jest": "26.6.3",
    "lint-staged": "10.5.4",
    "npm-pkg-lint": "1.3.0",
    "prettier": "2.2.1",
    "pretty-format": "26.6.2",
    "semantic-release": "17.4.2",
    "ts-jest": "26.5.5",
    "typescript": "4.2.4"
  },
  "engines": {
    "node": ">= 10.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "extends": "@html-validate/semantic-release-config"
  },
  "renovate": {
    "extends": [
      "@html-validate"
    ]
  }
}
